alias xu='sudo xbps-install -Suv'
alias xs='xbps-query -Rs'
alias xd='xbps-query -x'
alias xm='xbps-query -m'
alias xr='sudo xbps-remove -R'
alias xo='sudo xbps-remove -Oo'
alias clrk='sudo vkpurge rm all && sudo rm -rf /var/cache/xbps/*'
alias halt='sudo halt'
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'
alias shutdown='sudo shutdown'
alias srv='ls -la /etc/sv/'
alias vsv='sudo vsv'
alias tzupdate='sudo tzupdate'
alias ssh="TERM=xterm-256color $(which ssh)"
